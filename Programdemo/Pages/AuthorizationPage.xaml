<Page x:Class="Programdemo.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programdemo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center">
            <TextBlock Text="Авторизация"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="TBLogin" MaxLength="50"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="TBPassword" MaxLength="50"/>
            <Button x:Name="BEnter" Content="Войти" Click="BEnter_Click"/>
            <Button x:Name="BGuest" Content="Гостевой режим" Click="BGuest_Click"/>
        </StackPanel>
    </Grid>
</Page>
